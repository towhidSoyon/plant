<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".codebase.activity.SuggestedTreeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginTop="-5dp"
            android:background="@drawable/logo_one"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/back"
            android:backgroundTint="@color/Black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <!--<LinearLayout
            app:layout_constraintTop_toBottomOf="@id/backArrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/suggestedTreeRecyclerView"
                android:padding="@dimen/_7sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>-->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonMedicinePlant"
            android:layout_width="@dimen/_282sdp"
            android:layout_height="@dimen/_39sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/button_bg_3"
            android:fontFamily="@font/ubuntu_medium"
            android:paddingStart="@dimen/_15sdp"
            android:text="@string/medicine_plant"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/backArrow"
            tools:ignore="RtlSymmetry">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonACPlant"
            android:layout_width="@dimen/_282sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_9sdp"
            android:background="@drawable/button_bg_3"
            android:fontFamily="@font/ubuntu_medium"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="@string/suitable_plants_for_ac_room"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonMedicinePlant"
            tools:ignore="RtlSymmetry">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonFruitPlant"
            android:layout_width="@dimen/_282sdp"
            android:layout_height="@dimen/_39sdp"
            android:layout_marginTop="@dimen/_9sdp"
            android:background="@drawable/button_bg_3"
            android:fontFamily="@font/ubuntu_medium"
            android:paddingStart="@dimen/_15sdp"
            android:text="@string/fruit_plant"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonACPlant"
            tools:ignore="RtlSymmetry">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonFlowerPlant"
            android:layout_width="@dimen/_282sdp"
            android:layout_height="@dimen/_39sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/button_bg_3"
            android:fontFamily="@font/ubuntu_medium"
            android:paddingStart="@dimen/_15sdp"
